<Page x:Class="BioCal.Pages.FirstPersonStatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BioCal.Pages" xmlns:viewmodels="clr-namespace:BioCal.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FirstPersonStatisticsPage">
    <Page.DataContext>
        <viewmodels:FirstPersonStatisticsPageVM></viewmodels:FirstPersonStatisticsPageVM>
    </Page.DataContext>
    <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Statistics}"></ListBox>
</Page>
