<Page x:Class="BioCal.Pages.SecondPersonInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BioCal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SecondPersonInputPage">

    <StackPanel   Orientation="Vertical">
        <Frame Name="InputFrame"></Frame>
        <DockPanel Style="{StaticResource DockPanel}">
            <TextBlock DockPanel.Dock="Left" >Дата рождения</TextBlock>
            <DatePicker Name="BirthDate" DockPanel.Dock="Right" Style="{StaticResource DatePicker}" HorizontalAlignment="Stretch" />
        </DockPanel>
        <DockPanel Style="{StaticResource DockPanel}">
            <TextBlock DockPanel.Dock="Left">Дата отсчёта</TextBlock>
            <DatePicker  Name="StartDate" DockPanel.Dock="Right" Style="{StaticResource DatePicker}"></DatePicker>
        </DockPanel>
        <DockPanel Style="{StaticResource DockPanel}">
            <TextBlock DockPanel.Dock="Left">Длительность прогноза</TextBlock>
            <TextBox Name="Duration" DockPanel.Dock="Right" MinWidth="100"></TextBox>
        </DockPanel>
    </StackPanel>
</Page>
